<div class="row">
<div class="col-md-3">
    <ul class="sidebar-list">
        <li class="sidebar-item"><%= link_to "Your listing", rooms_path, class: "sidebar_link" %></li>
        <br/>
        <li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar_link active"  %></li>
        <br>
        <li class="sidebar-item"><%= link_to "Your Trips", your_trips_path, class: "sidebar_link active" %></li>
    </ul>
</div>
<div class="col-md-9">
    <div class="panel panel-default" >
        <div class="panel-heading">
            Your Reservations
        </div>
        <div class="panel-body">
        

         <% @rooms.each do |room| %>
            <% room.reservations.each do |reservation| %>

                <div class="row">
                    <div class="col-md-2">
                        <%= reservation.start_date.strftime('%v') %>
                    </div>
                    <div class="col-md-2">
                        <%= link_to rooms_path(reservation.room) do %>
                          <%= image_tag reservation.room.cover_photo(:thumb) %>
                        <% end %> 
                    </div>
                    <div class="col-md-8">
                        <%= link_to reservation.room.listing_name, rooms_path(reservation.room) %> <br><br>
                        <span>
                            <%= link_to user_path(reservation.user) do %>
                            <%= image_tag avatar_url(reservation.user), class:"image_circle avatar_small"  %>
                            <%= reservation.user.fullname %>
                            <% end %>
                        </span>
                    </div>
                </div>
                <hr>
            <% end %>
         <% end %>
        </div>
    </div>
</div>
</div>